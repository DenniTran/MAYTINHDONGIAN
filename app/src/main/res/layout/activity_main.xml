<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/nen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFC"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/textviewdapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#121211"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <TableRow
            android:weightSum="2">
            <Button
                android:layout_weight="1"
                android:text="DEL"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="AC"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
        </TableRow>
        <TableRow
            android:weightSum="4">
            <Button
                android:layout_weight="1"
                android:text="7"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="8"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="9"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="/"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
        </TableRow>
        <TableRow
            android:weightSum="4">
            <Button
                android:layout_weight="1"
                android:text="4"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="5"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="6"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="x"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
        </TableRow>
        <TableRow
            android:weightSum="4">
            <Button
                android:layout_weight="1"
                android:text="1"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="2"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="3"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="-"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
        </TableRow>
        <TableRow
            android:weightSum="4">
            <Button
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="."
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="="
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
            <Button
                android:layout_weight="1"
                android:text="+"
                android:textSize="30sp"
                android:background="#FBFBF8"
                android:layout_margin="5dp"
                android:onClick="ButtonClick"/>
        </TableRow>
    </TableLayout>
</LinearLayout>